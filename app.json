{
  "expo": {
    "name": "AppWordWonder",
    "slug": "AppWordWonder",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/Logo_WordWonder.png",
    "userInterfaceStyle": "light",

    "splash": {
      "image": "./assets/splashwordwonder.png",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": { 
        "foregroundImage": "./assets/adactative_icon_ww.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
      "plugins": [
        [
          "expo-font",
          {
            "fonts": ["./assets/fonts/Poppins/Poppins-Regular.ttf"]
          }
        ]
      ]
      
  }
}
